[global]
name={{fiod.jobname}}
filename=/tmp/fio-rand-RW
ioengine=libaio
bs={{fiod.bs}}
iodepth={{fiod.iodepth}}
direct=1
fsync_on_close=1
time_based=1
runtime={{fiod.runtime}}
clocksource=clock_gettime
ramp_time=10
startdelay=20

[fio]
rw={{fiod.rw}}
size={{fiod.filesize}}g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs=1
per_job_logs=1
log_avg_msec=60000
log_hist_msec=60000
