      ports:
      - name: uperf
        port: 30000
        targetPort: 30000
        protocol: UDP
{% for num in range(30001,30012,1) %}
      - name: uperf-control-tcp-{{num}}
        port: {{num}}
        targetPort: {{num}}
        protocol: UDP
{% endfor %}
{% if "sctp" in workload_args.protos %}
