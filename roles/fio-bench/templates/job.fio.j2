[global]
name={{fio.jobname}}
directory={{fio_path}}
ioengine=libaio
bs={{fio.bs}}
iodepth={{fio.iodepth}}
direct=1
fsync_on_close=1
time_based=1
runtime={{fio.runtime}}
clocksource=clock_gettime
ramp_time=10
startdelay=20

[fio]
rw={{fio.rw}}
size={{fio.filesize}}g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs=1
per_job_logs=1
log_avg_msec=60000
log_hist_msec=60000
