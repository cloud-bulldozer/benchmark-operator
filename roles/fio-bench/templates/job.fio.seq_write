[global]
name={{fio.jobname}}
directory=/mnt/pvc/
ioengine=sync
bs={{fio.bs}}
iodepth={{fio.iodepth}}
direct=0
create_on_open=1
end_fsync=1
time_based=1
runtime={{fio.runtime}}
clocksource=clock_gettime
ramp_time=10
startdelay=20

[write]
rw=write
size={{fio.filesize}}g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs={{fio.numjobs}}
per_job_logs=1
log_avg_msec=60000
log_hist_msec=60000

[read]
rw=read
size={{fio.filesize}}g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs={{fio.numjobs}}
per_job_logs=1
log_avg_msec=60000

[readwrite]
rw=rw
size={{fio.filesize}}g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs={{fio.numjobs}}
per_job_logs=1
log_avg_msec=60000
