[global]
name=custom
directory=/mnt/pvc/
ioengine=sync
bs=4
iodepth=32
direct=0
create_on_open=1
end_fsync=1
time_based=1
runtime=60
clocksource=clock_gettime
ramp_time=10
startdelay=20

[write]
rw=write
size=2g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs=2
per_job_logs=1
log_avg_msec=60000
log_hist_msec=60000

