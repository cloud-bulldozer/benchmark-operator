---
global:
  writeToFile: false
{% if prometheus is defined and prometheus.prom_url is defined %}
  indexerConfig:
    enabled: true
    esServers: [{{ prometheus.server }}]
    insecureSkipVerify: true
    defaultIndex: {{ workload_args.default_index|default("ripsaw-kube-burner") }}
    type: elastic
  measurements:
    - name: podLatency
      esIndex: {{ workload_args.default_index|default("ripsaw-kube-burner") }}
{% endif %}

jobs:
  - name: cluster-density
    jobIterations: {{ workload_args.job_iterations }}
    qps: {{ workload_args.qps|default(5) }}
    burst: {{ workload_args.burst|default(10) }}
    namespacedIterations: true
    namespace: cluster-density
    podWait: {{ workload_args.pod_wait|default(false) }}
    cleanup: {{ workload_args.cleanup|default(true) }}
{% if wait_for is defined %}
    waitFor: {{ wait_for|default([]) }}
{% endif %}
    waitWhenFinished: {{ workload_args.wait_when_finished|default(true) }}
    verifyObjects: {{ workload_args.verify_objects|default(true) }}
    errorOnVerify: {{ workload_args.error_on_verify|default(false) }}
    objects:

      - objectTemplate: imagestream.yml
        replicas: 3
        inputVars:
          prefix: cluster-density-src
          image: quay.io/openshift-scale/mastervertical-build 

      - objectTemplate: imagestream.yml
        replicas: 3
        inputVars:
          prefix: cluster-density-dst
          image: quay.io/openshift-scale/mastervertical-build 

      - objectTemplate: buildconfig.yml
        replicas: 3
        inputVars:
          from: cluster-density-src
          to: cluster-density-dst
          gitUri: https://github.com/openshift-scale/hello-openshift.git  

      - objectTemplate: imagestream.yml
        replicas: 6
        inputVars:
          prefix: cluster-density

      - objectTemplate: build.yml
        replicas: 6
        inputVars:
          gitUri: https://github.com/openshift-scale/hello-openshift.git
          image: quay.io/openshift-scale/mastervertical-build:latest

      - objectTemplate: deployment.yml
        replicas: 1
        inputVars:
          podReplicas: 2
          name: deployment-2pod
          envVar: 
          nodeSelectorKey: {{ workload_args.node_selector.key|default("node-role.kubernetes.io/worker") }}
          nodeSelectorValue: "{{ workload_args.node_selector.value|default("") }}"

      - objectTemplate: service.yml
        replicas: 1
        inputVars:
          name: deployment-2pod
        
      - objectTemplate: deployment.yml
        replicas: 2
        inputVars:
          podReplicas: 1
          name: deployment-1pod
          envVar: 
          nodeSelectorKey: {{ workload_args.node_selector.key|default("node-role.kubernetes.io/worker") }}
          nodeSelectorValue: "{{ workload_args.node_selector.value|default("") }}"
      
      - objectTemplate: service.yml
        replicas: 2
        inputVars:
          name: deployment-1pod

      - objectTemplate: route.yml
        replicas: 1
        inputVars:
          name: deployment-2pod

      - objectTemplate: route.yml
        replicas: 2
        inputVars:
          name: deployment-1pod

      - objectTemplate: secret.yml
        replicas: 20
