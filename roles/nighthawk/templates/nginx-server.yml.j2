---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nighthawk-benchmark-server-{{ type }}-{{ item }}
  namespace: '{{ operator_namespace }}'
  labels:
    run: nighthawk-benchmark-{{ type }}-{{ item }}
    app: nginx
spec:
  replicas: {{ workload_args.deployment_replicas | int }}
  selector:
    matchLabels:
      app: nginx-{{ type }}-{{ item }}
  template:
    metadata:
      labels:
        benchmark-uuid: {{ uuid }}
        benchmark-operator-workload: nighthawk
        benchmark-operator-role: server
        app: nginx-{{ type }}-{{ item }}
        type: {{ ansible_operator_meta.name }}-bench-nighthawk-server-{{ trunc_uuid }}
    spec:
      containers:
      - name: nginx
        image: quay.io/cloud-bulldozer/nginx:latest
        ports:
        - containerPort: 8080
        resources:
          requests:
            memory: "10Mi"
            cpu: "10m"    
      dnsPolicy: ClusterFirst
      restartPolicy: Always