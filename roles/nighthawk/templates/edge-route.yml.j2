apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    type: {{ ansible_operator_meta.name }}-bench-nighthawk-route-{{ trunc_uuid }}
  name: nighthawk-benchmark-route-edge-{{ item }}
  namespace: "{{ operator_namespace }}"
spec:
  port:
    targetPort: http
  tls:
    termination: edge
  to:
    kind: Service
    name: nighthawk-benchmark-service-edge-{{ item }}