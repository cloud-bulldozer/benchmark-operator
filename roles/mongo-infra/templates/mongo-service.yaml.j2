apiVersion: v1
kind: Service
metadata:
  name: mongo
  namespace: '{{ operator_namespace }}'
  labels:
    name: mongo
spec:
  ports:
{% if mongo.port is not defined %}
    - port: 27017
      targetPort: 27017
{% endif %}
{% if mongo.port is defined %}
    - port: {{ mongo.port }}
      targetPort: {{ mongo.port }}
{% endif %}
  clusterIP: None
  selector:
    role: mongo
