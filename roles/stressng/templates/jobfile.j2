run {{ workload_args.runtype }}				# run stressors sequentially
verbose							# verbose output
metrics-brief						# show metrics at end of each run
timeout {{ workload_args.timeout}}			# stop each stressor after 60 seconds

# cpu stressor
{% if workload_args.cpu_stressors is defined %}
cpu {{ workload_args.cpu_stressors }} 			# cpu stressor
cpu-load {{ workload_args.cpu_percentage }}		# percentage to which the cpu gets loaded
{% endif %}

# vm stressor
{% if workload_args.vm_stressors is defined %}
vm {{ workload_args.vm_stressors }} 			# vm stressors
vm-bytes {{ workload_args.vm_bytes }} 			# memory per vm stressor
vm-keep						 	# keep vm mapping
vm-populate 						# populate memory
{% endif %}

# memcpy stressor options
{% if workload_args.mem_stressors is defined %}
memcpy {{ workload_args.mem_stressors}}			# memcpy stressors
{% endif %}
